            </if>
            <if test="nowLocation!=null">
                now_location,
            </if>
            <if test="nation!=null">
                nation,
            </if>
            <if test="stateFounder!=null">
                state_founder,
            </if>
            <if test="updatedTime!=null">
                updated_time,
            </if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="dynastyId!=null">
