            </if>
        </set>
        where dynasty_id = #{dynastyId}
    </update>

    <!-- 根据 Id 删除系统配置数据 -->
    <delete id="deleteById" parameterType="string">
        delete
        from poem_dynasty
        where dynasty_id = #{dynastyId}
    </delete>

